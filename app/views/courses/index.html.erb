<h1>Listing courses</h1>

<table class="table table-bordered table-striped table-hover">
  <tr>
    <th>Call Number</th>
    <th>Title</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Days</th>
    <th>Building</th>
    <th>Room</th>
    <th>Professor</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.call_number %></td>
    <td><%= course.course_title %></td>
    <td><%= course.start_time %></td>
    <td><%= course.end_time %></td>
    <td><%= course.days %></td>
    <td><%= course.building %></td>
    <td><%= course.room %></td>
    <td><%= course.professor %></td>

    <td class="btn btn-info btn-small"><%= link_to 'Show', course %></td>
    <td class="btn btn-warning btn-small"><%= link_to 'Edit', edit_course_path(course) %></td>
    <td class="btn btn-danger btn-small"><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

