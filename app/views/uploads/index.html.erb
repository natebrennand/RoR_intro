<h1>Listing uploads</h1>

<table class="table table-bordered table-striped table-hover">
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @uploads.each do |upload| %>
  <tr>
    <td><%= upload.title %></td>

    <td class="btn btn-info btn-small"><%= link_to 'Show', upload %></td>
    <% if current_student.role %>
      <td class="btn btn-warning btn-small"><%= link_to 'Edit', edit_upload_path(upload) %></td>
      <td class="btn btn-danger btn-small"><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

