<!DOCTYPE html>
<html>
<head>
  <title>Courzilla</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:notice] %>
    <h2>Notification:</h2>
    <div id="notice"><%= flash[:notice] %><br /></div>
  <% end %>

  <% if flash[:error] %>
    <h2>Error:</h2>
    <div id="error"><%= flash[:error] %><br /></div>
  <% end %>

  <div id="container">

    <div id="student_header">
      <% if current_student %>
        <%= link_to "Home", root_path %>
        | <%= link_to "Log out", logout_path %>
        | Logged in as <%= current_student.uni %>
      <% end %>
    </div>

  <%= yield %>
  </div>
  
</body>
</html>
